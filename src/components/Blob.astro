---
interface Props {
  directionalProps: string;
}

const { directionalProps } = Astro.props;
---

<div id="blob" class={`absolute rounded-full opacity-10 w-64 h-64 lg:w-[420px] lg:h-[420px] blur-2xl bg-purple-700  ${directionalProps}`}></div>

<script>
  import { animate } from 'motion';
  animate('#blob', 
  { y: [0, -20, -30, -50, -50, -30, -30, 0], x: [0, 20, 30, 60, 80, 30, 20, 0] },
  { duration: 5.8, repeat: Infinity })
</script>